<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="12dp"
    android:gravity="center_vertical"
    android:background="?attr/selectableItemBackground">

    <TextView
        android:id="@+id/tvAlternativeCropName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="1. Wheat"
        android:textSize="16sp"
        android:textColor="@color/text_primary"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="end"
        android:layout_marginStart="16dp">

        <TextView
            android:id="@+id/tvAlternativeCropConfidence"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="78%"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@color/modern_medium_4"
            android:layout_marginBottom="4dp" />

        <com.google.android.material.progressindicator.LinearProgressIndicator
            android:id="@+id/progressAlternativeConfidence"
            android:layout_width="80dp"
            android:layout_height="4dp"
            app:indicatorColor="@color/modern_medium_3"
            app:trackColor="@color/modern_light_2" />

    </LinearLayout>

</LinearLayout>