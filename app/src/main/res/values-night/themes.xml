<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Dark theme for FasalSaathi -->
    <style name="Base.Theme.FasalSaathi" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary_green</item>
        <item name="colorPrimaryVariant">@color/primary_green_dark</item>
        <item name="colorOnPrimary">@color/text_on_primary</item>
        
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondary_blue</item>
        <item name="colorSecondaryVariant">@color/secondary_blue_dark</item>
        <item name="colorOnSecondary">@color/text_on_primary</item>
        
        <!-- Background colors -->
        <item name="android:colorBackground">@color/background_light</item>
        <item name="colorSurface">@color/background_white</item>
        <item name="colorOnSurface">@color/text_on_surface</item>
        
        <!-- Status bar -->
        <item name="android:statusBarColor">@color/modern_dark_4</item>
        <item name="android:navigationBarColor">@color/modern_dark_4</item>
        <item name="android:windowLightStatusBar">false</item>
        
        <!-- Error colors -->
        <item name="colorError">@color/error_red</item>
        <item name="colorOnError">@color/text_on_primary</item>
        
        <!-- Enhanced Material 3 colors -->
        <item name="colorPrimaryContainer">@color/surface_light</item>
        <item name="colorOnPrimaryContainer">@color/text_primary</item>
        <item name="colorSecondaryContainer">@color/surface_medium</item>
        <item name="colorOnSecondaryContainer">@color/text_primary</item>
    </style>

    <style name="Theme.FasalSaathi" parent="Base.Theme.FasalSaathi" />
    
    <!-- Bottom Navigation Styles for Dark Mode -->
    <style name="FasalSathi.BottomNavigation" parent="Widget.Material3.BottomNavigationView">
        <item name="android:background">@color/nav_background</item>
        <item name="itemIconTint">@color/nav_bottom_navigation_selector</item>
        <item name="itemTextColor">@color/nav_bottom_navigation_selector</item>
        <item name="itemActiveIndicatorStyle">@style/FasalSathi.BottomNavigation.ActiveIndicator</item>
        <item name="android:elevation">8dp</item>
        <item name="labelVisibilityMode">labeled</item>
    </style>
    
    <style name="FasalSathi.BottomNavigation.ActiveIndicator" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:color">@color/nav_indicator</item>
        <item name="android:width">64dp</item>
        <item name="android:height">32dp</item>
        <item name="marginHorizontal">16dp</item>
        <item name="shapeAppearance">@style/ShapeAppearance.Material3.Corner.Full</item>
    </style>
    
</resources>