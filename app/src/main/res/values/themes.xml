<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.FasalSaathi" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary_green</item>
        <item name="colorPrimaryVariant">@color/primary_green_dark</item>
        <item name="colorOnPrimary">@color/text_on_primary</item>
        
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondary_blue</item>
        <item name="colorSecondaryVariant">@color/secondary_blue_dark</item>
        <item name="colorOnSecondary">@color/text_on_primary</item>
        
        <!-- Background colors -->
        <item name="android:colorBackground">@color/background_light</item>
        <item name="colorSurface">@color/background_white</item>
        <item name="colorOnSurface">@color/text_primary</item>
        
        <!-- Status bar -->
        <item name="android:statusBarColor">@color/modern_dark_3</item>
        <item name="android:navigationBarColor">@color/modern_dark_4</item>
        <item name="android:windowLightStatusBar">false</item>
        
        <!-- Error colors -->
        <item name="colorError">@color/error_red</item>
        <item name="colorOnError">@color/white</item>
        
        <!-- Enhanced Material 3 colors -->
        <item name="colorPrimaryContainer">@color/surface_light</item>
        <item name="colorOnPrimaryContainer">@color/text_primary</item>
        <item name="colorSecondaryContainer">@color/surface_medium</item>
        <item name="colorOnSecondaryContainer">@color/text_primary</item>
    </style>

    <style name="Theme.FasalSaathi" parent="Base.Theme.FasalSaathi" />
    
    <!-- Base FasalSaathi style -->
    <style name="FasalSaathi" />
    
    <!-- Splash Screen Theme -->
    <style name="Theme.FasalSaathi.Splash" parent="Theme.FasalSaathi">
        <item name="android:windowBackground">@color/modern_medium_4</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>
    
    <!-- Enhanced Button Styles -->
    <style name="FasalSaathi.Button" parent="Widget.Material3.Button">
        <item name="android:textColor">@color/text_on_primary</item>
        <item name="backgroundTint">@color/button_primary</item>
        <item name="android:textSize">16sp</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:paddingStart">24dp</item>
        <item name="android:paddingEnd">24dp</item>
        <item name="cornerRadius">25dp</item>
        <item name="android:elevation">4dp</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="rippleColor">@color/ripple_color</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:letterSpacing">0.02</item>
    </style>
    
    <style name="FasalSaathi.Button.Secondary" parent="Widget.Material3.Button.OutlinedButton">
        <item name="android:textColor">@color/button_primary</item>
        <item name="strokeColor">@color/button_primary</item>
        <item name="strokeWidth">2dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:paddingStart">24dp</item>
        <item name="android:paddingEnd">24dp</item>
        <item name="cornerRadius">25dp</item>
        <item name="rippleColor">@color/ripple_color</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>
    
    <style name="FasalSaathi.Button.Text" parent="Widget.Material3.Button.TextButton">
        <item name="android:textColor">@color/button_primary</item>
        <item name="android:textSize">14sp</item>
        <item name="rippleColor">@color/ripple_color</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>
    
    <!-- Enhanced Card Styles -->
    <style name="FasalSaathi.Card" parent="Widget.Material3.CardView.Elevated">
        <item name="cardCornerRadius">16dp</item>
        <item name="cardElevation">6dp</item>
        <item name="android:layout_margin">12dp</item>
        <item name="cardBackgroundColor">@color/background_white</item>
        <item name="strokeColor">@color/surface_light</item>
        <item name="strokeWidth">1dp</item>
    </style>
    
    <style name="FasalSaathi.Card.Dashboard" parent="FasalSaathi.Card">
        <item name="cardCornerRadius">20dp</item>
        <item name="cardElevation">8dp</item>
        <item name="android:layout_margin">16dp</item>
    </style>
    
    <style name="FasalSaathi.Card.Feature" parent="FasalSaathi.Card">
        <item name="cardCornerRadius">18dp</item>
        <item name="cardElevation">4dp</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
    </style>
    
    <!-- Enhanced Text Styles -->
    <style name="FasalSaathi.Text">
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:letterSpacing">0.01</item>
    </style>
    
    <style name="FasalSaathi.Text.Headline">
        <item name="android:textSize">28sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:letterSpacing">-0.02</item>
    </style>
    
    <style name="FasalSaathi.Text.Title">
        <item name="android:textSize">22sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>
    
    <style name="FasalSaathi.Text.Subtitle">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/text_secondary</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>
    
    <style name="FasalSaathi.Text.Body">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:lineSpacingMultiplier">1.3</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>
    
    <style name="FasalSaathi.Text.Caption">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/text_hint</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>
    
    <!-- Enhanced Input Field Styles -->
    <style name="FasalSaathi.TextInputLayout" parent="Widget.Material3.TextInputLayout.FilledBox">
        <item name="boxStrokeColor">@color/button_primary</item>
        <item name="hintTextColor">@color/text_secondary</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="boxBackgroundColor">@color/surface_light</item>
        <item name="boxCornerRadiusTopStart">12dp</item>
        <item name="boxCornerRadiusTopEnd">12dp</item>
        <item name="boxCornerRadiusBottomStart">12dp</item>
        <item name="boxCornerRadiusBottomEnd">12dp</item>
    </style>
    
    <!-- Enhanced Toolbar Styles -->
    <style name="FasalSaathi.Toolbar" parent="Widget.Material3.Toolbar">
        <item name="android:background">@color/modern_medium_4</item>
        <item name="android:elevation">6dp</item>
        <item name="titleTextColor">@color/white</item>
    </style>
    
    <!-- Enhanced Bottom Navigation Style -->
    <style name="FasalSaathi.BottomNavigation" parent="Widget.Material3.BottomNavigationView">
        <item name="android:background">@color/background_white</item>
        <item name="itemIconTint">@color/modern_medium_4</item>
        <item name="itemTextColor">@color/modern_medium_4</item>
        <item name="elevation">12dp</item>
        <item name="itemActiveIndicatorStyle">@style/FasalSaathi.BottomNavigation.ActiveIndicator</item>
        <item name="itemRippleColor">@color/modern_light_2</item>
    </style>
    
    <style name="FasalSaathi.BottomNavigation.ActiveIndicator" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:color">@color/modern_light_2</item>
        <item name="android:width">56dp</item>
        <item name="android:height">32dp</item>
        <item name="shapeAppearance">@style/ShapeAppearance.Material3.Corner.Full</item>
    </style>
    
    <!-- Enhanced Floating Action Button Style -->
    <style name="FasalSaathi.FloatingActionButton" parent="Widget.Material3.FloatingActionButton.Primary">
        <item name="android:layout_margin">16dp</item>
        <item name="backgroundTint">@color/modern_medium_4</item>
        <item name="tint">@color/white</item>
        <item name="elevation">8dp</item>
        <item name="hoveredFocusedTranslationZ">12dp</item>
        <item name="pressedTranslationZ">16dp</item>
        <item name="rippleColor">@color/modern_light_2</item>
        <item name="shapeAppearance">@style/ShapeAppearance.Material3.Corner.Full</item>
    </style>
    
    <!-- Enhanced Dialog Styles -->
    <style name="FasalSaathi.Dialog" parent="Theme.Material3.DayNight.Dialog">
        <item name="colorPrimary">@color/modern_medium_4</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSurface">@color/background_white</item>
        <item name="colorOnSurface">@color/text_primary</item>
        <item name="android:windowAnimationStyle">@style/FasalSaathi.Dialog.Animation</item>
    </style>
    
    <style name="FasalSaathi.Dialog.Animation">
        <item name="android:windowEnterAnimation">@anim/fade_in_scale</item>
        <item name="android:windowExitAnimation">@anim/fade_out_scale</item>
    </style>
    
    <!-- Enhanced Switch Style -->
    <style name="FasalSaathi.Switch" parent="Widget.Material3.CompoundButton.Switch">
        <item name="thumbTint">@color/modern_medium_4</item>
        <item name="trackTint">@color/modern_light_3</item>
        <item name="trackTintMode">src_in</item>
    </style>
    
    <!-- Enhanced Splash Screen Theme -->
    <style name="FasalSaathi.SplashTheme" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:windowBackground">@color/modern_medium_4</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:windowTranslucentNavigation">false</item>
        <item name="android:statusBarColor">@color/modern_dark_4</item>
        <item name="android:navigationBarColor">@color/modern_dark_4</item>
    </style>
    
    <!-- Enhanced Loading Styles -->
    <style name="FasalSaathi.Loading">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:indeterminate">true</item>
        <item name="android:indeterminateTint">@color/modern_medium_4</item>
    </style>
    
    <!-- Enhanced Snackbar Style -->
    <style name="FasalSaathi.Snackbar" parent="Widget.Material3.Snackbar">
        <item name="android:background">@color/modern_medium_4</item>
        <item name="android:textColor">@color/white</item>
    </style>
    
    <!-- Enhanced Chip Styles -->
    <style name="FasalSaathi.Chip" parent="Widget.Material3.Chip.Suggestion">
        <item name="chipBackgroundColor">@color/modern_light_2</item>
        <item name="android:textColor">@color/modern_dark_4</item>
        <item name="chipStrokeColor">@color/modern_light_3</item>
        <item name="chipStrokeWidth">1dp</item>
        <item name="chipCornerRadius">16dp</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="rippleColor">@color/modern_medium_4</item>
    </style>
    
    <style name="FasalSaathi.Chip.Action" parent="FasalSaathi.Chip">
        <item name="chipBackgroundColor">@color/modern_medium_4</item>
        <item name="android:textColor">@color/white</item>
        <item name="chipIconTint">@color/white</item>
    </style>
    
    <!-- Bottom Navigation Styles -->
    <style name="FasalSathi.BottomNavigation" parent="Widget.Material3.BottomNavigationView">
        <item name="android:background">@color/nav_background</item>
        <item name="itemIconTint">@color/nav_bottom_navigation_selector</item>
        <item name="itemTextColor">@color/nav_bottom_navigation_selector</item>
        <item name="itemActiveIndicatorStyle">@style/FasalSathi.BottomNavigation.ActiveIndicator</item>
        <item name="android:elevation">8dp</item>
        <item name="labelVisibilityMode">labeled</item>
    </style>
    
    <style name="FasalSathi.BottomNavigation.ActiveIndicator" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:color">@color/nav_indicator</item>
        <item name="android:width">64dp</item>
        <item name="android:height">32dp</item>
        <item name="marginHorizontal">16dp</item>
        <item name="shapeAppearance">@style/ShapeAppearance.Material3.Corner.Full</item>
    </style>

</resources>