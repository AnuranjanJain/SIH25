<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.FasalSaathi" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary_green</item>
        <item name="colorPrimaryVariant">@color/primary_green_dark</item>
        <item name="colorOnPrimary">@color/text_on_primary</item>
        
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/accent_yellow</item>
        <item name="colorSecondaryVariant">@color/accent_yellow_dark</item>
        <item name="colorOnSecondary">@color/text_primary</item>
        
        <!-- Background colors -->
        <item name="android:colorBackground">@color/background_light</item>
        <item name="colorSurface">@color/background_white</item>
        <item name="colorOnSurface">@color/text_primary</item>
        
        <!-- Status bar -->
        <item name="android:statusBarColor">@color/primary_green_dark</item>
        
        <!-- Error colors -->
        <item name="colorError">@color/error_red</item>
        <item name="colorOnError">@color/white</item>
    </style>

    <style name="Theme.FasalSaathi" parent="Base.Theme.FasalSaathi" />
    
    <!-- Base FasalSaathi style -->
    <style name="FasalSaathi" />
    
    <!-- Splash Screen Theme -->
    <style name="Theme.FasalSaathi.Splash" parent="Theme.FasalSaathi">
        <item name="android:windowBackground">@drawable/splash_background</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>
    
    <!-- Button Styles -->
    <style name="FasalSaathi.Button" parent="Widget.Material3.Button">
        <item name="android:textColor">@color/white</item>
        <item name="backgroundTint">@color/primary_green</item>
        <item name="android:textSize">16sp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="cornerRadius">8dp</item>
    </style>
    
    <style name="FasalSaathi.Button.Secondary" parent="FasalSaathi.Button">
        <item name="android:textColor">@color/primary_green</item>
        <item name="backgroundTint">@color/white</item>
        <item name="strokeColor">@color/primary_green</item>
        <item name="strokeWidth">2dp</item>
    </style>
    
    <!-- Card Styles -->
    <style name="FasalSaathi.Card" parent="Widget.Material3.CardView.Elevated">
        <item name="cardCornerRadius">12dp</item>
        <item name="cardElevation">4dp</item>
        <item name="android:layout_margin">8dp</item>
        <item name="cardBackgroundColor">@color/background_white</item>
    </style>
    
    <style name="FasalSaathi.Card.Dashboard" parent="FasalSaathi.Card">
        <item name="cardCornerRadius">16dp</item>
        <item name="cardElevation">6dp</item>
        <item name="android:layout_margin">12dp</item>
    </style>
    
    <!-- Text Styles -->
    <style name="FasalSaathi.Text">
        <item name="android:textColor">@color/text_primary</item>
    </style>
    
    <style name="FasalSaathi.Text.Headline">
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="fontFamily">sans-serif-medium</item>
    </style>
    
    <style name="FasalSaathi.Text.Title">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>
    
    <style name="FasalSaathi.Text.Subtitle">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/text_secondary</item>
    </style>
    
    <style name="FasalSaathi.Text.Body">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:lineSpacingMultiplier">1.2</item>
    </style>
    
    <style name="FasalSaathi.Text.Caption">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/text_hint</item>
    </style>
    
    <!-- Input Field Styles -->
    <style name="FasalSaathi.TextInputLayout" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/primary_green</item>
        <item name="hintTextColor">@color/text_secondary</item>
        <item name="android:layout_marginBottom">16dp</item>
    </style>
    
    <!-- Toolbar Styles -->
    <style name="FasalSaathi.Toolbar" parent="Widget.Material3.Toolbar">
        <item name="android:background">@color/primary_green</item>
        <item name="titleTextColor">@color/white</item>
        <item name="android:elevation">4dp</item>
    </style>
    
    <!-- Bottom Navigation Style -->
    <style name="FasalSaathi.BottomNavigation" parent="Widget.Material3.BottomNavigationView">
        <item name="android:background">@color/background_white</item>
        <item name="itemIconTint">@color/bottom_nav_color</item>
        <item name="itemTextColor">@color/bottom_nav_color</item>
        <item name="elevation">8dp</item>
    </style>
    
    <!-- Floating Action Button Style -->
    <style name="FasalSaathi.FloatingActionButton" parent="Widget.Material3.FloatingActionButton.Primary">
        <item name="backgroundTint">@color/accent_yellow</item>
        <item name="tint">@color/text_primary</item>
        <item name="elevation">6dp</item>
    </style>
    
    <!-- Dialog Styles -->
    <style name="FasalSaathi.Dialog" parent="ThemeOverlay.Material3.Dialog">
        <item name="colorPrimary">@color/primary_green</item>
        <item name="colorSecondary">@color/accent_yellow</item>
    </style>
    
    <!-- Switch Style -->
    <style name="FasalSaathi.Switch" parent="Widget.Material3.CompoundButton.Switch">
        <item name="thumbTint">@color/switch_thumb_color</item>
        <item name="trackTint">@color/switch_track_color</item>
    </style>
</resources>