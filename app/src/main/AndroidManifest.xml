<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Permissions -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.MODIFY_AUDIO_SETTINGS" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    
    <!-- Hardware features -->
    <uses-feature 
        android:name="android.hardware.microphone"
        android:required="false" />

    <application
        android:name=".FasalSaathiApplication"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.FasalSaathi"
        tools:targetApi="31">

        <!-- MainActivity -->
        <activity
            android:name=".ui.main.MainActivity"
            android:exported="true"
            android:theme="@style/Theme.FasalSaathi">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <!-- Language Selection Activity -->
        <activity
            android:name=".ui.language.LanguageSelectionActivity"
            android:exported="false"
            android:theme="@style/Theme.FasalSaathi"
            android:screenOrientation="portrait" />
            
        <!-- Auth Activities -->
        <activity
            android:name=".ui.auth.LoginActivity"
            android:exported="false"
            android:theme="@style/Theme.FasalSaathi"
            android:screenOrientation="portrait" />
            
        <activity
            android:name=".ui.auth.SignUpActivity"
            android:exported="false"
            android:theme="@style/Theme.FasalSaathi"
            android:screenOrientation="portrait" />
            
        <!-- Onboarding Activity -->
        <activity
            android:name=".ui.onboarding.OnboardingActivity"
            android:exported="false"
            android:theme="@style/Theme.FasalSaathi" />
            
        <!-- Dashboard Activity -->
        <activity
            android:name=".ui.dashboard.DashboardActivity"
            android:exported="false"
            android:theme="@style/Theme.FasalSaathi" />
            
        <!-- Weather Activity -->
        <activity
            android:name=".ui.weather.WeatherActivity"
            android:exported="false"
            android:theme="@style/Theme.FasalSaathi" />
            
        <!-- AI Assistant Activity -->
        <activity
            android:name=".ui.ai.AIAssistantActivity"
            android:exported="false"
            android:theme="@style/Theme.FasalSaathi"
            android:windowSoftInputMode="adjustResize" />
            
        <!-- Crop Recommendation Activity -->
        <activity
            android:name=".ui.crop.CropRecommendationActivity"
            android:exported="false"
            android:theme="@style/Theme.FasalSaathi" />
            
        <!-- New Crop Recommendation Activity -->
        <activity
            android:name=".ui.crops.CropRecommendationActivity"
            android:exported="false"
            android:theme="@style/Theme.FasalSaathi" />
            
        <!-- Enhanced Location Picker Activity -->
        <activity
            android:name=".ui.location.LocationPickerActivity"
            android:exported="false"
            android:theme="@style/Theme.FasalSaathi"
            android:label="Select Location"
            android:parentActivityName=".ui.crops.CropRecommendationActivity" />
            
        <!-- Disease Detection Activity -->
        <activity
            android:name=".ui.disease.DiseaseDetectionActivity"
            android:exported="false"
            android:theme="@style/Theme.FasalSaathi" />
            
        <!-- Market Activity -->
        <activity
            android:name=".ui.market.MarketActivity"
            android:exported="false"
            android:theme="@style/Theme.FasalSaathi" />
            
        <!-- Community Activity -->
        <activity
            android:name=".ui.community.CommunityActivity"
            android:exported="false"
            android:theme="@style/Theme.FasalSaathi" />
            
        <!-- Discussion Forums Activity -->
        <activity
            android:name=".ui.community.DiscussionForumsActivity"
            android:exported="false"
            android:theme="@style/Theme.FasalSaathi" />
            
        <!-- Knowledge Sharing Activity -->
        <activity
            android:name=".ui.community.KnowledgeSharingActivity"
            android:exported="false"
            android:theme="@style/Theme.FasalSaathi" />
            
        <!-- Expert Support Activity -->
        <activity
            android:name=".ui.community.ExpertSupportActivity"
            android:exported="false"
            android:theme="@style/Theme.FasalSaathi" />
            
        <!-- Market Updates Activity -->
        <activity
            android:name=".ui.community.MarketUpdatesActivity"
            android:exported="false"
            android:theme="@style/Theme.FasalSaathi" />
            
        <!-- FAQ Activity -->
        <activity
            android:name=".ui.faq.FaqActivity"
            android:exported="false"
            android:theme="@style/Theme.FasalSaathi" />
            
        <!-- Profile Activity -->
        <activity
            android:name=".ui.profile.ProfileActivity"
            android:exported="false"
            android:theme="@style/Theme.FasalSaathi" />
            
        <!-- Settings Activity -->
        <activity
            android:name=".ui.profile.SettingsActivity"
            android:exported="false"
            android:theme="@style/Theme.FasalSaathi" />

        <!-- File Provider for camera functionality -->
        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="com.fasalsaathi.app.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths" />
        </provider>

        <!-- Network security config for API calls -->
        <meta-data
            android:name="android.net.ssl_fallback"
            android:value="true" />

    </application>

</manifest>